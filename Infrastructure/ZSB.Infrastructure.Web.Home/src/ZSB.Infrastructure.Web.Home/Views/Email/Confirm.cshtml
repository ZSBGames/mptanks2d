@if (ViewBag.Error)
{
    <h1>Something happened :(</h1>
    <h3>Just not the something we wanted to happen...</h3>
    <h3 style="color:red">@Html.Raw(ViewBag.ErrorMessage)</h3>

}
@if (!ViewBag.Error)
{
    <h1>Everything's all right.</h1>
    <h3 style="color:gray">@Html.Raw(ViewBag.ErrorMessage)</h3>
    <a href="//mptanks.zsbgames.me/Download"><h3>Click (or tap) here to download MP Tanks</h3></a>

}
