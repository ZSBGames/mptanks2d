@{
    ViewBag.Title = "Log in";
}

<h1 style="text-align:center">Log in to your ZSB account</h1>
<br />
<div class="col-md-6 col-md-offset-3">
    <form class="form-inline" method="post">
        <div class="input-group" style="width:100%">
            <span class="input-group-addon">Email address</span>
            <input class="form-control" style="min-width:100%" type="email" name="EmailAddress" placeholder="" value="@ViewBag.EmailAddress" />
        </div>
        <br/>
        <div class="input-group" style="width:100%">
            <span class="input-group-addon">Password</span>
            <input class="form-control" style="min-width:100%" type="password" name="Password" placeholder="" />
        </div>
        <br />
        <input class="btn btn-default" style="min-width:100%" type="submit" value="Log in" />
        <h3>Don't have an account? <a href="/Register">Create one</a>.</h3>
    </form>
    <hr />
    @if (ViewBag.Error)
    {
        <div class="alert alert-danger">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            @Html.Raw(ViewBag.Message)
        </div>
    }
</div>

<div class="clearfix"></div>