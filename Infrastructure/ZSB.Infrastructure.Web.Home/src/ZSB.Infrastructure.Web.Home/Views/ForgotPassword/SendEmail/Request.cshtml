@{
    ViewBag.Title = "Forgot your password";
}

<form method="post">
    <h1>Forgot your password?</h1>
    @Html.AntiForgeryToken()
    <h3>Enter the email address associated with your account and we'll send you an email to reset your password.</h3>
    <input type="email" name="EmailAddress" placeholder="Enter email..." />
    <input type="submit" value="Send password reset message" />
</form>