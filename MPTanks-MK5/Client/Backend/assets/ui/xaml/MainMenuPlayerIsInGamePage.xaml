<ek:UIRoot 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ek="clr-namespace:EmptyKeys.UserInterface.Designer;assembly=EmptyKeys.UserInterface.Designer"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Width="800" Height="480" Background="#000000">
    <ek:UIRoot.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://siteoforigin:,,,/assets/ui/xaml/UITemplateDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ek:UIRoot.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="A game is currently active..." Foreground="White"
                        FontFamily="3D Thirteen Pixel Fonts"
                       TextAlignment="Center" Margin="20,20,20,0" FontSize="32"></TextBlock>
            <TextBlock  FontFamily="3D Thirteen Pixel Fonts" 
                       Text="You're in game right now.&#x0a;Close the game to get back to the main menu.&#x0a;Or, if you're absolutely sure" 
                       Foreground="White" TextAlignment="Center" Margin="20,20,20,0" FontSize="18"></TextBlock>
            <Button  FontFamily="3D Thirteen Pixel Fonts" 
                    Margin="10" Style="{DynamicResource PrimaryButton}" 
                    Command="{Binding ForciblyCloseButtonCommand}">Click here to forcibly close the game</Button>
        </StackPanel>
    </Grid>
</ek:UIRoot>